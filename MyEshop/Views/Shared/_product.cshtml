@model DataLayer.Products

<div class="border-radius">
    <span>
        <img style="width:100%; height:150px; margin:10px 10px 0px 57px" src="~/Images/ProductImages/Thumb/@Model.ImageName">
    </span>
    <a href="ShowProductDetail/@Model.ProductID"><h2> @Model.ProductTitle </h2></a>
    <h6>افزودن به لیست مقایسه <input type="checkbox" onchange="AddToCompare(@Model.ProductID)"></h6>
    <span class="col-md-9 col-sm-9 col-xs-9 price-layer">
        <label>@Model.Price.ToString("#,0")  تومان</label>
    </span>
    <a onclick="AddToshopCart(@Model.ProductID)" class="col-md-2 col-sm-2 col-xs-2 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 buy-button border-radius">
        <label><i class="fa fa-shopping-basket"></i></label>
    </a>
</div>